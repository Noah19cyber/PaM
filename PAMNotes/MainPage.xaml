<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMNotes.MainPage">

    <ScrollView>
        <VerticalStackLayout
                 Padding="30,0"
                 Spacing="25">
            <Editor 
                x:Name="NoteEditor"
                Placeholder="Digite aqui sua anotação"
               HeightRequest="300" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand">
                
                <Button Text="Salvar" WidthRequest="150" x:Name="SaveBtn" Clicked="SaveBtn_Clicked"/>
                
                <Button Text="Apagar" WidthRequest="150" x:Name="DeleteBtn" Clicked="DeleteBtn_Clicked"/>

            </HorizontalStackLayout>
                                   
            


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
